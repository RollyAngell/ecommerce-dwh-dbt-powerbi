# Staging Environment Configuration - Complete Enterprise Setup
# E-commerce Data Warehouse - Staging Environment

# Environment identifier
DBT_ENV=staging
ENVIRONMENT=staging

# Database connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=dbt_staging_user
DB_PASSWORD=staging_password_456
DB_NAME=ecommerce_dw_staging
DB_SCHEMA=analytics_staging
DBT_THREADS=6

# SSL Configuration
SSL_MODE=prefer

# Logging configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGS=true

# dbt specific settings
DBT_SEND_ANONYMOUS_USAGE_STATS=false
DBT_PRINTER_WIDTH=120

# Data settings - Full staging capabilities
ENABLE_SAMPLE_DATA=false
SAMPLE_SIZE=50000
ENABLE_DEBUG_MODELS=true

# Data refresh settings
FULL_REFRESH=false
INCREMENTAL_STRATEGY=merge

# Data validation - Comprehensive testing
RUN_EXTENDED_TESTS=true
STORE_TEST_FAILURES=true
ENABLE_FRESHNESS_CHECKS=true
ENABLE_DATA_PROFILING=true

# Quality gates
FAIL_ON_WARNING=false
ERROR_THRESHOLD=5
WARNING_THRESHOLD=10

# Documentation
GENERATE_DOCS=true
ENABLE_LINEAGE=true
ENABLE_CATALOG=true

# Performance monitoring
ENABLE_PERFORMANCE_TRACKING=true
SLOW_QUERY_THRESHOLD=30

# Notification settings (can be enabled later)
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_ALERTS=staging-alerts@company.com

# Backup and recovery
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=14
BACKUP_SCHEDULE=daily

# Security settings
ENABLE_ROW_LEVEL_SECURITY=false
ENABLE_COLUMN_MASKING=false
AUDIT_LOGGING=true

# Development features
ENABLE_UNIT_TESTS=true
ENABLE_INTEGRATION_TESTS=true
ENABLE_SCHEMA_EVOLUTION=true
