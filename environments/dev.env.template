# Development Environment Configuration
# E-commerce Data Warehouse - Development Settings
# Copy this file to .env.dev and configure your values

# Environment identifier
DBT_ENV=dev
ENVIRONMENT=development

# Database connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=dbt_dev_user
DB_PASSWORD=dev_password_123
DB_NAME=ecommerce_dw_dev
DB_SCHEMA=analytics_dev
DBT_THREADS=2

# SSL Configuration
SSL_MODE=prefer

# Logging configuration
LOG_LEVEL=DEBUG
ENABLE_DEBUG_LOGS=true

# dbt specific settings
DBT_SEND_ANONYMOUS_USAGE_STATS=false
DBT_PRINTER_WIDTH=120

# Development flags
ENABLE_SAMPLE_DATA=true
SAMPLE_SIZE=1000
ENABLE_DEBUG_MODELS=true

# Data refresh settings
FULL_REFRESH=true
INCREMENTAL_STRATEGY=delete+insert

# Notification settings (disabled for dev)
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false 