# Production Environment Configuration - Local Testing
DBT_ENV=prod
ENVIRONMENT=production

# Database connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=dbt_prod_user
DB_PASSWORD=super_secure_prod_password_change_me
DB_NAME=ecommerce_dw_prod
DB_SCHEMA=analytics
DBT_THREADS=8

# SSL Configuration
SSL_MODE=prefer

# Logging configuration
LOG_LEVEL=WARNING
ENABLE_DEBUG_LOGS=false

# dbt specific settings
DBT_SEND_ANONYMOUS_USAGE_STATS=false
DBT_PRINTER_WIDTH=100

# Production flags
ENABLE_SAMPLE_DATA=false
SAMPLE_SIZE=
ENABLE_DEBUG_MODELS=false

# Data refresh settings
FULL_REFRESH=false
INCREMENTAL_STRATEGY=merge

# Data validation
RUN_EXTENDED_TESTS=true
STORE_TEST_FAILURES=true
ENABLE_FRESHNESS_CHECKS=true
ENABLE_DATA_PROFILING=true

# Quality gates
FAIL_ON_WARNING=true
ERROR_THRESHOLD=0
WARNING_THRESHOLD=5

# Documentation
GENERATE_DOCS=true
ENABLE_LINEAGE=true
ENABLE_CATALOG=true

# Performance monitoring
ENABLE_PERFORMANCE_TRACKING=true
SLOW_QUERY_THRESHOLD=60

# Monitoring and alerts
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_MONITORING=true
ENABLE_ALERTING=true

# Backup and recovery
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=90
BACKUP_SCHEDULE=daily

# Performance settings
MAX_CONCURRENT_QUERIES=6
QUERY_TIMEOUT=3600
CONNECTION_POOL_SIZE=10
